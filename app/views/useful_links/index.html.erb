<div style="margin-top:30px;" class="row">

  <div class="col-sm-8">
    <div class="widget">
      <div class="widget-header">
        <h2><i class="fa fa-bar-chart"></i> <strong>Useful Link Add</strong> </h2>
      </div>

      <div class="tab-content">


        <!-- Tab timeline -->
        <div class="tab-pane animated active fadeInRight" id="my-timeline">
          <div class="user-profile-content">
            <div style="border:1px solid #EDEDED; border-radius:3px; padding:10px;" class="widget">

              <ul style="margin:0" id="demo5" class="nav nav-tabs nav-simple">
                <li class="active">
                  <a href="#demo5-home" data-toggle="tab"><i class="fa fa-pencil-square-o"></i> Add Link</a>
                </li>

              </ul>

              <div class="tab-content">
                <div class="tab-pane fade active in the-timeline" id="demo5-home">
                  <%= form_for @useful_link,:html => {:class => 'post-to-timeline'} do |f| %>
                      <!--<form role="form" class="post-to-timeline">--><br>
                      <%= f.text_field :title, :class=>"form-control", :placeholder=>'Link title...' %><br><br>
                      <%= f.text_field :link, :class=>"form-control", :placeholder=>'link' %><br><br>
                      <!--<textarea class="form-control"  placeholder="Notice Post to timeline..."></textarea>-->

                      <div   class='row'>
                        <div style=" margin-left:17px; margin-top:25px; "  class="col-sm-6">
                          <%= f.submit :class=>'btn btn-blue-3' %>
                        </div>

                      </div>
                      <!--</form>-->
                  <% end %>

                </div> <!-- / .tab-pane -->


              </div> <!-- / .tab-content -->
            </div><!-- / total .tab-content -->

            <!-- Begin timeline -->
            <div class="the-timeline">

              <ul>
                <% if @useful_links.any? %>
                    <% @useful_links.each do |useful_link| %>
                        <li>
                          <h4>
                            <%= useful_link.title %>
                          </h4>
                          <h6>
                            <%= useful_link.created_at.strftime('%d %B, %y') %> <span>|  BY CBHS </span>
                            <%= link_to useful_link_path(useful_link), :class=>'label label-danger pull-right', method: :delete,data: { confirm: 'Are you sure?' } do %>
                                <i class="fa fa-close"></i>  Delete
                            <% end %>
                          </h6>

                          <p>
                            <% if useful_link.link %>
                            Link: <a href="<%= useful_link.link %>" target="_blank"><%= useful_link.link %></a>
                            <% end %>
                          </p><br>

                        </li>
                    <% end %>
                <% end %>

              </ul>

            </div><!-- End div .the-timeline -->
            <!-- End timeline -->
          </div><!-- End div .user-profile-content -->
        </div><!-- End div .tab-pane -->

      </div><!-- End div .tab-content -->
      <%#= paginate @useful_links %>
    </div><!-- End div .box-info -->
  </div>

  <%= render 'layouts/right_side_student_count_class_wise_admin' %>
</div>
