<footer>
  <!--footer-widgets-wrapper starts-->
  <div class="footer-widgets-wrapper">
    <!--container starts-->
    <div class="container">

      <div class="column dt-sc-one-fourth first">
        <aside class="widget widget_text">
          <h3 class="widgettitle red_sketch">Useful link </h3>
          <ul>
            <% if UsefulLink.all.any? %>
                <% UsefulLink.last(5).reverse.each do |useful_link| %>
                    <li>
                      <a href="<%= useful_link.link %>" target="_blank"> <%=  useful_link.title %></a>
                    </li>
                <% end %>
            <% end %>
          </ul>
        </aside>
      </div>
      <div class="column dt-sc-one-fourth">
        <aside class="widget widget_recent_entries">
          <h3 class="widgettitle green_sketch"> News & Event </h3>
          <ul>
            <% if Event.all.any? %>
                <% Event.last(3).reverse.each do |event| %>
                    <li>
                      <%= link_to event_details_schools_path(event), :data=>{ :no_turbolink=> true} do %>
                      <%= image_tag(event.image) %>
                      <% end %>
                      <h6>
                        <%= link_to event.title, event_details_schools_path(event), :data=>{ :no_turbolink=> true} %>
                      </h6>
                      <span><%= event.created_at.strftime('%d %B, %y') %> </span>
                    </li>
                <% end %>
            <% end %>
          </ul>
        </aside>
      </div>
      <div class="column dt-sc-one-fourth">
        <aside class="widget facebook">
          <h3 class="widgettitle yellow_sketch"><a href="#"> Facebook </a></h3>

        </aside>
      </div>
      <div class="column dt-sc-one-fourth">
        <aside class="widget widget_text">
          <h3 class="widgettitle steelblue_sketch">Contact</h3>
          <div class="textwidget">
            <p class="dt-sc-contact-info"><span class="fa fa-map-marker"></span> 4318 Mansion House, Greenland <br> United States </p>
            <p class="dt-sc-contact-info"><span class="fa fa-phone"></span> (000) 233 - 3236 </p>
            <p class="dt-sc-contact-info"><span class="fa fa-envelope"></span><a href="mailto:yourname@somemail.com"> Kidslife@somemail.com </a></p>
          </div>
        </aside>
        <aside class="widget mailchimp">
          <p> We're social </p>
          <form name="frmnewsletter" class="mailchimp-form" action="php/subscribe.php" method="post">
            <p>
              <span class="fa fa-envelope-o"> </span>
              <input type="email" placeholder="Email Address" name="mc_email" required />
            </p>
            <input type="submit" value="Subscribe" class="button" name="btnsubscribe">
          </form>
          <div id="ajax_subscribe_msg"></div>
        </aside>
      </div>

    </div>
    <!--container ends-->
  </div>
  <!--footer-widgets-wrapper ends-->
  <div class="copyright">
    <div class="container">
      <p class="copyright-info">@copy right chor bhoira high school <a href="#" target="_blank" title=""> developed by convergent soft </a></p>
