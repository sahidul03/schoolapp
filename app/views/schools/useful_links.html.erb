<div id="main">
  <!--breadcrumb-section starts-->

  <!--breadcrumb-section ends-->
  <!--container starts-->
  <div class="container">
    <!--primary starts-->
    <section  id="primary" class="with-sidebar">
      <!--dt-sc-one-half starts-->
      <div class="column dt-sc-one-column">
        <div class="notice_banner">
          <h2>

            Useful Links</h2>

        </div>
        <% if @useful_links.any?  %>
            <% @useful_links.each do |useful_link| %>
                <div class="notice_show_web">
                  <h4>
                    <a href="<%= useful_link.link %>" target="_blank"><%= useful_link.title %></a>
                    </h4>
                  <h6><%= useful_link.created_at.strftime('%d %B, %y') %> | BY CBHS</h6>
                  <%  if useful_link.link %>
                      <p>
                        Link: <a href="<%= useful_link.link %>" target="_blank"> <%= useful_link.link %></a>
                      </p>
                  <% end %>
                </div>
            <% end %>
        <% end %>
        <div class="pagination_container_div">
          <%= paginate @useful_links %>
        </div>


      </div>
      <!--dt-sc-one-half ends-->
    </section>
    <!--primary ends-->

    <!--secondary starts-->
    <%= render 'layouts/right_side_user_layout' %>
    <!--secondary ends-->

  </div>
  <!--container ends-->
</div>