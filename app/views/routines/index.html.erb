<div style="margin-top:30px;" class="row">

  <div class="col-sm-8">
    <div class="widget">
      <div class="widget-header">
        <h2><i class="fa fa-bar-chart"></i> <strong>Routine</strong> </h2>
      </div>

      <div class="tab-content">


        <!-- Tab timeline -->
        <div class="tab-pane animated active fadeInRight" id="my-timeline">
          <div class="user-profile-content">
            <div style="border:1px solid #EDEDED; border-radius:3px; padding:10px;" class="widget">

              <ul style="margin:0" id="demo5" class="nav nav-tabs nav-simple">
                <li class="active">
                  <a href="#demo5-home" data-toggle="tab"><i class="fa fa-pencil-square-o"></i> Create Routine</a>
                </li>

              </ul>

              <div class="tab-content">
                <div class="tab-pane fade active in the-timeline" id="demo5-home">
                  <%= form_for @routine,:html => {:class => 'post-to-timeline'} do |f| %>
                      <!--<form role="form" class="post-to-timeline">--><br>
                      <%= f.text_field :title, :class=>"form-control", :placeholder=>'Routine title...' %><br><br>
                      <%= f.text_area :body, :class=>"form-control ckeditor", :placeholder=>'Routine Post to timeline...' %>
                      <!--<textarea class="form-control"  placeholder="Notice Post to timeline..."></textarea>-->
                      <div  style="margin-bottom:-40px; margin-left:2px; margin-right:2px; padding-top:10px;"  class="row">
                        <div  class="col-sm-6">
                          <%= f.label 'File Upload(pdf, doc, xls and image)', :class=>'' %>
                          <%= f.file_field :file, :class=>'btn btn-info btn-file' %>
                        </div>
                        <div  class="col-sm-6 text-right" style=" margin-top:25px; ">
                          <%= f.submit :class=>'btn btn-blue-3' %>
                        </div>
                      </div>

                      <!--</form>-->
                  <% end %>

                </div> <!-- / .tab-pane -->


              </div> <!-- / .tab-content -->
            </div><!-- / total .tab-content -->

            <!-- Begin timeline -->
            <div class="the-timeline">

              <ul>
                <% if @routines.any? %>
                    <% @routines.each do |routine| %>
                        <li>
                          <h4>
                            <%= routine.title %>
                          </h4>
                          <h6>
                            <%= routine.created_at.strftime('%d %B, %y') %> <span>|  BY CBHS </span>
                            <%= link_to routine_path(routine), :class=>'label label-danger pull-right', method: :delete,data: { confirm: 'Are you sure?' } do %>
                                <i class="fa fa-close"></i>  Delete
                            <% end %>
                            <%= link_to edit_routine_path(routine), :class=>'label label-info pull-right',:data => { :no_turbolink => true } do %>
                                <i class="fa fa-edit"></i>  Edit
                            <% end %>
                          </h6>

                          <p>
                            <%= routine.body.html_safe if routine.body %>
                          </p><br>
                          <%  if routine.file %>
                              <h4>
                                <i class="fa fa-download"></i>
                                <a href="<%= routine.file %>" target="_blank"> Download Routine Attachment</a>
                              </h4>
                          <% end %>

                        </li>
                    <% end %>
                <% end %>

              </ul>
            </div><!-- End div .the-timeline -->
            <!-- End timeline -->
          </div><!-- End div .user-profile-content -->
        </div><!-- End div .tab-pane -->

      </div><!-- End div .tab-content -->
    </div><!-- End div .box-info -->
  </div>
  <%= render 'layouts/right_side_student_count_class_wise_admin' %>
</div>
