<div class="tab-content">
  <div class="tab-pane fade active in the-timeline" id="demo5-home">
    <%= form_for @result,:html => {:class => 'post-to-timeline'} do |f| %>
        <% if @result.errors.any? %>
            <div id="error_explanation">
              <h4>
                <%= pluralize(@result.errors.count, "error") %> prohibited
                this result from being saved:
              </h4>
              <ul>
                <% @result.errors.full_messages.each do |msg| %>
                    <li style="color: deeppink"><%= msg %></li>
                <% end %>
              </ul>
            </div>
        <% end %>
        <!--<form role="form" class="post-to-timeline">--><br>
        <%= f.text_field :title, :class=>"form-control", :placeholder=>'Result title...' %><br><br>
        <div class="form-group">
          <label for="exampleInputEmail1">Select Class</label>
          <%= select_tag 'level_id', options_from_collection_for_select(Level.all,:id, :name), { :class => 'form-control' } %>
        </div>
        <div class="form-group">
          <label for="exampleInputEmail1">Result Body</label>
          <%= f.text_area :body, :class=>"form-control ckeditor", :placeholder=>'Result Post to timeline...' %>
        </div>
        <!--<textarea class="form-control"  placeholder="Notice Post to timeline..."></textarea>-->
        <div  style="margin-bottom:-40px; margin-left:2px; margin-right:2px; border-top:1px solid #ddd; padding-top:10px;"  class="row">
          <div  class="col-sm-9">
            <%= f.file_field :file, :class=>'btn btn-info btn-file' %>
          </div>

          <div class="col-sm-3 text-right">
            <%= f.submit :class=>'btn btn-blue-3' %>
          </div>
        </div>
        <!--</form>-->
    <% end %>

  </div> <!-- / .tab-pane -->


</div>