<div class="row">
  <div class="col-lg-8 portlets">
    <div class="widget">
      <div class="widget-header">
        <h2><i class="fa fa-bar-chart"></i> <strong>All Results</strong> </h2>
        <%= link_to new_result_path, :class=>'btn btn-info pull-right result_index_new',:data => { :no_turbolink => true } do %>
        <i class="fa fa-plus"></i> Create New Result
        <% end %>
      </div>

      <div class="widget-content">
        <!--end of bill to--->
        <div class="table-responsive text-left">
          <!--<h4 class="text-center padding-top">All Results</h4>-->
          <div class="btn-group pull-right" style="margin:10px 10px">
            <%= select_tag 'level_id', options_from_collection_for_select(Level.all,:id, :name), { :class => 'btn btn-blue-3 dropdown-toggle' } %>

          </div>
          <div  class="data-table-toolbar">
            <div class="row">
              <div class="col-md-12">


              </div>


            </div>
          </div>
        </div><!--end of table-responsive --->


        <% if @results.any? %>
            <div class="widget invoice">
              <div class="widget-content">
                <div class="table-responsive">

                  <table class="table table-condensed ">
                    <thead>
                    <tr>
                      <th>Date</th>
                      <th>Class</th>
                      <th>Results Title</th>
                      <th>Edit / Delete</th>
                    </tr>
                    </thead>

                    <tbody>
                    <% @results.each do |result| %>
                        <tr>
                          <td>
                            <%= result.created_at.strftime('%d %B, %y') %>
                          </td>
                          <td>
                            <%= result.level.name %>
                          </td>
                          <td>
                            <%= link_to result.title, result_path(result), :data => { :no_turbolink => true } %>
                          </td>


                          <td>
                            <div class="btn-group btn-group-xs">
                              <%= link_to edit_result_path(result), :class=>'btn btn-orange-4',:title=>'Edit', :data => { :no_turbolink => true } do%>
                                  <i class="fa fa-edit"></i>
                              <% end %>
                              <%= link_to result_path(result), :class=>'btn btn-red-1',:title=>'Delete',:method=>'delete', data: { confirm: 'Are you sure?' } do%>
                                  <i class="fa fa-close"></i>
                              <% end %>
                              <!--<a data-toggle="tooltip" title="Delete" class="btn btn-red-1"><i class="fa fa-close"></i></a>-->
                              <!--<a data-toggle="tooltip" title="Edit" class="btn btn-orange-4"><i class="fa fa-edit"></i></a>-->
                            </div>
                          </td>
                        </tr>
                    <% end %>




                    </tbody>

                  </table>
                </div>
              </div>
            </div>

        <% end %>

      </div>
    </div>
  </div>

  <%= render 'layouts/right_side_student_count_class_wise_admin' %>
</div>
