<%= form_for @committee do |f| %>
    <% if @committee.errors.any? %>
        <div id="error_explanation">
          <h4>
            <%= pluralize(@committee.errors.count, "error") %> prohibited
            this committee member from being saved:
          </h4>
          <ul>
            <% @committee.errors.full_messages.each do |msg| %>
                <li style="color: deeppink"><%= msg %></li>
            <% end %>
          </ul>
        </div>
    <% end %>
    <div class="form-group">
      <label for="exampleInputEmail1">Member Name</label>
      <%= f.text_field :name, :class=>'form-control',:placeholder=>"Member name" %>
    </div>
    <div class="form-group">
      <label for="exampleInputEmail1">Designation</label>
      <%= f.text_field :designation, :class=>'form-control',:placeholder=>"Designation" %>
    </div>
    <div class="form-group">
      <label for="exampleInputEmail1">Address</label>
      <%= f.text_field :address, :class=>'form-control',:placeholder=>"Address" %>
    </div>
    <div class="form-group">
      <label for="exampleInputEmail1">Email Address</label>
      <%= f.text_field :email, :class=>'form-control',:placeholder=>"Email Address" %>
    </div>
    <div class="form-group">
      <label for="exampleInputEmail1">Contact No</label>
      <%= f.text_field :phone, :class=>'form-control',:placeholder=>"Phone Number" %>
    </div>

    <div class="form-group">
      <label for="exampleInputEmail1">Message</label>
      <%= f.text_area :message, :class=>'form-control textaria_for_teacher_and_committee',:placeholder=>"Message" %>
    </div>

    <div class="form-group">
      <label class="col-sm-2 control-label">Gender</label>
      <div class="col-sm-10">
        <div class="radio iradio">
          <label>
            <%= f.radio_button :gender,'male',:checked=>true %>
            <!--<input type="radio" name="optionsRadios" id="optionsRadios1" value="option1" checked>-->
            Male
          </label>
        </div>
        <div class="radio iradio">
          <label>
            <%= f.radio_button :gender,'female' %>
            <!--<input type="radio" name="optionsRadios" id="optionsRadios2" value="option2">-->
            Female
          </label>
        </div>
      </div>
    </div>
    <div class="form-group">
      <label for="exampleInputEmail1">Date of Birth</label>
      <%= f.date_field :birth_day, :class=>'form-control',:placeholder=>"Guardian Contact No" %>
    </div>

    <div class="form-group">
      <label for="exampleInputEmail1">If you are President of the committee, Please check it.</label>
      <%= f.check_box :head, {:class => "", :style=>'  width: 31px; height: 16px;'}, "head", "general" %>
    </div>

    <div class="form-group">
      <%= f.file_field :profile_photo, :class=>'btn btn-default' %>
      <!--<input type="file" class="btn btn-default" title="Search for a file to add">-->
      <p class="help-block">Profile Photo fo Member</p>
    </div>
    <%= f.submit 'Submit', :class=>'btn btn-default' %>
<% end %>